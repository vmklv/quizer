<div class="registration">
	<form method="POST" action="">
		<div class="header">
			<h2>Регистрация</h2>
		</div>
		<div class="row">
			<div class="col-md-12 col-lg-12">
				<label>Ваш email адрес</label>
				<input type="email" name="email" class="form-control" maxlength="64" required>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 col-lg-6">
				<label>Пароль</label>
				<input type="password" name="password" class="form-control" maxlength="64" required>
			</div>
			<div class="col-md-6 col-lg-6">
				<label>Повторите пароль</label>
				<input type="password" name="repassword" class="form-control" maxlength="64" required>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 col-lg-6">
				<label>Имя</label>
				<input type="text" name="name" class="form-control" maxlength="16" required>
			</div>
			<div class="col-md-6 col-lg-6">
				<label>Фамилия</label>
				<input type="text" name="surname" class="form-control" maxlength="16" required>
			</div>
		</div>
		<div class="row">
			<div class="send-btn col-md-6 col-lg-6 col-md-offset-3 col-lg-offset-3">
				<input type="hidden" name="form_token" value="true">
				<input type="submit" class="btn btn-success col-md-12 col-lg-12" value="Зарегистрироваться">
			</div>
		</div>
	</form>
</div>